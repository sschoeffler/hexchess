/* CSS PATCH - Add this to the END of your styles.css to fix doubling */

/* Hide any text content inside pieces - only show ::before pseudo-elements */
.piece {
    font-size: 0 !important; /* Hide any text content */
}

/* REPLACE your piece section with this - solid pieces with proper Unicode rendering */

.piece::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: block;
    font-size: 48px;
    font-weight: 900;
    line-height: 1;
    text-shadow: 
        -1px -1px 0 #000,
        1px -1px 0 #000,
        -1px 1px 0 #000,
        1px 1px 0 #000;
    
    /* Enhanced Unicode rendering for chess pieces */
    font-family: "Segoe UI Symbol", "Segoe UI Emoji", "Noto Color Emoji", "Apple Color Emoji", "Arial Unicode MS", "Lucida Sans Unicode", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    font-variant: normal;
    font-synthesis: none;
    -webkit-font-feature-settings: "liga" 1;
    font-feature-settings: "liga" 1;
}

/* SOLID pieces for ALL players - simpler and more consistent */
.piece[data-piece="king"]::before { content: "♚"; }
.piece[data-piece="queen"]::before { content: "♛"; }
.piece[data-piece="rook"]::before { content: "♜"; }
.piece[data-piece="bishop"]::before { content: "♝"; }
.piece[data-piece="knight"]::before { content: "♞"; }
.piece[data-piece="pawn"]::before { content: "♟"; }

/* Force Unicode display - important for pawn rendering */
.piece[data-piece="pawn"]::before {
    content: "♟";
    font-variant-emoji: text; /* Force text rendering instead of emoji */
    -webkit-font-variant-ligatures: none;
    font-variant-ligatures: none;
}

/* Colors for all players */
.piece.red-piece::before {
    color: #dc143c !important;
}

.piece.blue-piece::before {
