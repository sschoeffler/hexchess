/* Force mobile browsers to render pawns as colored text, not black emoji */

@media (max-width: 768px) {
    .piece[data-piece="pawn"]::before {
        font-variant-emoji: text !important;
        font-feature-settings: "emoji" 0 !important;
        font-family: "Times New Roman", "Arial Unicode MS", serif !important;
    }
}


/* Override all circle-forcing rules with pawn symbols */

@media (max-width: 768px) {
    .piece[data-piece="pawn"]::before,
    html body .piece[data-piece="pawn"]::before,
    html body .game-area .piece[data-piece="pawn"]::before,
    html body .hex-board .piece[data-piece="pawn"]::before {
        content: "♟" !important;
        font-variant-emoji: text !important;
        font-feature-settings: "emoji" 0 !important;
        font-family: "Times New Roman", "Arial Unicode MS", serif !important;
        font-size: 40px !important;
    }
}
