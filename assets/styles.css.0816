/* Add this CSS to your styles.css to fix mobile pawn glitch */

/* Ensure consistent piece styling across all devices */
.piece {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 5;
    pointer-events: none;
    font-size: 48px;
    font-weight: 900;
    line-height: 1;
    text-shadow: 
        -1px -1px 0 #000,
        1px -1px 0 #000,
        -1px 1px 0 #000,
        1px 1px 0 #000;
    filter: none;
    transition: all 0.2s ease;
    user-select: none;
    opacity: 1;
    
    /* Force consistent font rendering on mobile */
    font-family: "Segoe UI Symbol", "Noto Color Emoji", "Apple Color Emoji", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Add missing black piece styling */
.piece.black-piece {
    color: #2c3e50; /* Dark blue-gray instead of pure black for better visibility */
}

/* Ensure consistent piece colors across all players */
.piece.red-piece {
    color: #dc143c;
}

.piece.blue-piece {
    color: #1e90ff;
}

.piece.green-piece {
    color: #228b22;
}

.piece.yellow-piece {
    color: #f1c40f;
}

.piece.purple-piece {
    color: #9b59b6;
}

.piece.orange-piece {
    color: #e67e22;
}

/* Mobile-specific fixes */
@media (max-width: 768px) {
    .piece {
        /* Slightly larger on mobile for better visibility */
        font-size: 52px;
        
        /* Stronger text shadow for mobile screens */
        text-shadow: 
            -2px -2px 0 #000,
            2px -2px 0 #000,
            -2px 2px 0 #000,
            2px 2px 0 #000,
            0 0 4px rgba(0, 0, 0, 0.5);
    }
    
    /* Ensure pieces don't get cut off on smaller hexagons */
    .hex-cell {
        width: 48px;
        height: 56px;
    }
    
    /* Adjust hex board scaling for mobile */
    .hex-board {
        transform: scale(0.7);
    }
}

/* Force consistent Unicode characters - add this if you're using specific piece characters */
.piece[data-piece="king"]::before { content: "♔"; }
.piece[data-piece="queen"]::before { content: "♕"; }
.piece[data-piece="rook"]::before { content: "♖"; }
.piece[data-piece="bishop"]::before { content: "♗"; }
.piece[data-piece="knight"]::before { content: "♘"; }
.piece[data-piece="pawn"]::before { content: "♙"; }

/* Alternative: If you want filled pieces for black */
.piece.black-piece[data-piece="king"]::before { content: "♚"; }
.piece.black-piece[data-piece="queen"]::before { content: "♛"; }
.piece.black-piece[data-piece="rook"]::before { content: "♜"; }
.piece.black-piece[data-piece="bishop"]::before { content: "♝"; }
.piece.black-piece[data-piece="knight"]::before { content: "♞"; }
.piece.black-piece[data-piece="pawn"]::before { content: "♟"; }

/* Ensure pieces display correctly on high-DPI mobile screens */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .piece {
        /* Better rendering on retina displays */
        text-rendering: optimizeLegibility;
        -webkit-font-feature-settings: "liga" 1;
        font-feature-settings: "liga" 1;
    }
}
