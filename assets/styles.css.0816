.notification {
    position: fixed;
    top: 20px;
    right: 20px;
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 15px 20px;
    border-radius: 8px;
    border-left: 4px solid #e74c3c;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    z-index: 1000;
    transform: translateX(400px);
    transition: transform 0.3s ease;
    max-width: 300px;
}

.notification.show {
    transform: translateX(0);
}

.notification.success {
    border-left-color: #2ecc71;
}

.notification.warning {
    border-left-color: #f39c12;
}

.notification.error {
    border-left-color: #e74c3c;
}

.notification-title {
    font-weight: bold;
    margin-bottom: 5px;
}

.notification-message {
    font-size: 12px;
    opacity: 0.9;
}

.piece-nav-btn {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    padding: 8px 4px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 11px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
}

.piece-nav-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
}

.piece-nav-btn.active {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-color: #667eea;
    transform: translateY(-1px);
}

.piece-desc {
    display: none;
    font-size: 13px;
    line-height: 1.4;
    margin-bottom: 15px;
}

.piece-desc.active {
    display: block;
}

.piece-desc h4 {
    color: #2ecc71;
    margin-bottom: 8px;
    font-size: 14px;
}

.hex-cell.capture-square {
    z-index: 16;
}

.hex-cell.capture-square .hex-content {
    border: 4px solid #e74c3c !important;
    background: rgba(231, 76, 60, 0.4) !important;
    animation: pulseCapture 1.2s infinite;
}

@keyframes pulseCapture {
    0%, 100% { 
        transform: scale(1.0);
        opacity: 1;
    }
    50% { 
        transform: scale(1.15);
        opacity: 0.8;
    }
}

