// FIXED - Renamed to avoid conflict with existing joinGame function
function joinGameFromLobby(gameId) {
    const button = document.querySelector(`[data-game-id="${gameId}"] .join-btn`);
    if (button) {
        button.disabled = true;
        button.textContent = 'Joining...';
    }
    
    // Use your existing API structure
    fetch(window.location.href, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: `action=join_game&game_id=${gameId}`
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            showNotification('‚úÖ Joined Game', 'Successfully joined game!', 'success');
            // Use your existing URL structure
            setTimeout(() => {
                window.location.href = `?page=game&id=${gameId}`;
            }, 1000);
        } else {
            showNotification('‚ùå Join Failed', data.error || 'Failed to join game', 'error');
            if (button) {
                button.disabled = false;
                button.textContent = 'Join Game';
            }
        }
    })
    .catch(error => {
        console.error('Error joining game:', error);
        showNotification('‚ùå Connection Error', 'Error joining game. Please try again.', 'error');
        if (button) {
            button.disabled = false;
            button.textContent = 'Join Game';
        }
    });
}

