      foreach ($players as $p) { if ($p['user_id'] != $_SESSION['user_id']) { $aiSlot = $p['player_slot']; break; } }
      if ($aiSlot === null) { $aiSlot = ($userPlayerSlot == 0) ? 1 : 0; }
  }
  echo json_encode($aiSlot);
