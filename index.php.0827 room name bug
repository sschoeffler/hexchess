      <?php elseif ($gameData['game_mode'] === 'ai'): ?>
        <!-- AI display logic -->
      <?php else: ?>
        <?php echo htmlspecialchars($pl['username']); ?>
      <?php endif; ?>
    </div>
  <?php endforeach; ?>
  </div>
</div>

